@model EntityLayer.Student;
@{
    Layout = null;
}
<h1>Öğrenci Ekle</h1>
<form asp-action="StudentAdd" asp-controller="Student" method="post">
    <div class="mb-3">
        <label class="form-label">ÖĞRENCİ ADI</label>
        <input asp-for="student_Name" type="text" class="form-control">

    </div>
    <div class="mb-3">
        <label class="form-label">ÖĞRENCİ SOYADI</label>
        <input type="text" class="form-control" asp-for="student_Lastname">
    </div>
    <div class="mb-3">
        <label class="form-label">ÖĞRENCİ NO</label>
        <input type="text" class="form-control" asp-for="student_Number">
    </div>
    <button type="submit" class="btn btn-primary">ÖĞRENCİ EKLE</button>
</form>

